<div class="page-header">
  <h1>Tasks</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Amount</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @requisitions) do |req| %>
        <td><%= req.title %></td>
        <td><%= number_to_currency(req.amount) %></td>
        <td><%= req.status %></td>
        <td>
          <% if req.status == 'Shipped' %>
            <%= link_to 'Received', received_requisition_path(req), class: 'btn btn-primary'  %>
          <% else %>
            <%= link_to 'Approve', approve_requisition_path(req), class: 'btn btn-primary' %>
          <% end %>    
        </td>
      <% end %>
    </tbody>
  </table>
</div>
